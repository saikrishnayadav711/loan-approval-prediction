        <!-- Error Message -->
        <div id="error" class="error hidden mb-4"></div>

        <form id="loanForm" class="space-y-6" onsubmit="handleSubmit(event)">
            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-venus-mars mb-2 text-gray-600"></i>
                <label for="gender" class="text-gray-700 font-medium">Gender:</label>
                <select id="gender" name="gender" class="form-select mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-user-ring mb-2 text-gray-600"></i>
                <label for="maritalStatus" class="text-gray-700 font-medium">Marital Status:</label>
                <select id="maritalStatus" name="maritalStatus" class="form-select mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
