                    <option value="Married">Married</option>
                    <option value="Single">Single</option>
                </select>
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-graduation-cap mb-2 text-gray-600"></i>
                <label for="education" class="text-gray-700 font-medium">Education:</label>
                <select id="education" name="education" class="form-select mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Select Education</option>
                    <option value="Graduate">Graduate</option>
                    <option value="Not Graduate">Not Graduate</option>
                </select>
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-wallet mb-2 text-gray-600"></i>
                <label for="applicantIncome" class="text-gray-700 font-medium">Applicant Income:</label>
                <input type="number" id="applicantIncome" name="applicantIncome" class="form-input mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="Income in USD">
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-wallet mb-2 text-gray-600"></i>
                <label for="coapplicantIncome" class="text-gray-700 font-medium">Co-applicant Income:</label>
                <input type="number" id="coapplicantIncome" name="coapplicantIncome" class="form-input mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="Income in USD">
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
                <i class="fas fa-dollar-sign mb-2 text-gray-600"></i>
                <label for="loanAmount" class="text-gray-700 font-medium">Loan Amount:</label>
                <input type="number" id="loanAmount" name="loanAmount" class="form-input mt-1 border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" placeholder="Loan Amount in USD">
            </div>

            <div class="flex flex-col border-b-2 border-gray-300 pb-2">
