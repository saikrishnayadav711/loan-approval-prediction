    <script>
        function handleSubmit(event) {
            event.preventDefault(); // Prevent form submission via URL

            // Hide previous error message
            const errorDiv = document.getElementById('error');
            errorDiv.classList.add('hidden');
            errorDiv.innerText = '';

            // Simple validation
            const fields = ['gender', 'maritalStatus', 'education', 'applicantIncome', 'coapplicantIncome', 'loanAmount', 'creditHistory', 'propertyArea'];
            let isValid = true;

            fields.forEach(field => {
                const element = document.getElementById(field);
                if (!element.value) {
                    isValid = false;
                    element.classList.add('border-red-500');
                } else {
                    element.classList.remove('border-red-500');
                }
            });

            if (!isValid) {
                errorDiv.classList.remove('hidden');
                errorDiv.innerText = 'Please fill out all required fields.';
                return; // Stop if validation fails
            }

            // Show loading indicator
            document.getElementById('loading').style.display = 'flex';

            // Simulate a delay for loading
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';

                // Simulate result
                const isApproved = Math.random() > 0.5; // Randomly approve or reject
                document.getElementById('result').innerText = isApproved ? 'Your loan will be approved!' : 'Your loan will not be approved.';
            }, 3000); // 3 seconds delay
        }
    </script>
